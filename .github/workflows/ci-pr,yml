name: CI - Regression Tests on Pull Requests

on:
  pull_request:    # any PR against any branch

jobs:
  test-frontend:
    runs-on: ubuntu-latest
    name: Lint & Test React app

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Node.js 20 (with cache)
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: npm

      - name: Install dependencies
        run: npm ci

      - name: Run ESLint
        run: npm run lint

      - name: Run Jest test suite
        run: npm test -- --ci --passWithNoTests
